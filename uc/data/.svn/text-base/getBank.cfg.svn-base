var ghost = require(process.argv[2]+'/webrexco/cfg/ghost.js'); 
var gapi = require(process.argv[2]+'/webrexco/cmn/gapi.js');

exports.itfconf = function() {
	return new CurrentAPI().conf();
}

exports.itfleft = function(req,res,fld,fle) {
	return new CurrentAPI().output(req,res,fld,fle);
}
var CurrentAPI = gapi.AuthorizeAPI.extend({
    conf: function() { return { auth: true,
        	type: "json",
        	itfs: [
	            {
	                host: ghost.dscm.makercenter.addr,
	                port: ghost.dscm.makercenter.port,
	                iurl: "/identifyApp?actn=getBank",
	                uuid: "identifyApp",            
	                meth: "post",
	                type: "sdcm",
	                next: [],
	                func: function(req,res,fld,fle){
	                	return new CurrentAPI("identifyApp").
	                		callFunc(req,res,fld,fle);
	                }
	            }      		
        	]
    	};
    },
	
	doCallFunc: function(uuid, req, res, fld, fle) {
		var ip = gapi.getIPv4(req.user.addr);
		var userId = req.session.user.userId;
		ghost.getLogger().info("[doCallFunc]IP：%s, service: getBank, dc: identifyApp.getBank, message: 'param', param:phone=%s", ip,userId);
		return {
	     	"claz" : "['java.lang.Long']",
	        "json" : [userId]
	    };
	},
		    
	doOutput: function(req, res, fld, fle) {
		var ip = gapi.getIPv4(req.user.addr);
		if(!req.rslt['identifyApp']){
			ghost.getLogger().error("[doOutput]IP：%s, service:getBank, dc: identifyApp.getBank, message: 'rslt is null', rslt: %s", ip, JSON.stringify(req.rslt['identifyApp']));
			return gapi.toResult(500, "系统异常");
		}
		ghost.getLogger().info("[doOutput]IP：%s, service:getBank, dc: identifyApp.getBank, message: 'success', rslt: %s", ip, JSON.stringify(req.rslt['identifyApp']));
		return gapi.toResult(null, null, req.rslt['identifyApp']);
	}
});
