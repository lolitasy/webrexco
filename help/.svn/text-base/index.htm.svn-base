    <% include ../cmn/footer.ejs %>
    <script type="text/template" id="tpl_list_dream">  
        <# for(var i=0; i<data.list.length; i++) { #>
            <# var item = data.list[i]; #>
               	<div class="dream-list clearfix" data-id="<#= item.id #>">
					<a class="dream-title f-tof"><#= item.title #></a><span class="u_icon open_icon"></span>
					<div class="u-maincen"></div>
				</div>
        <# } #>
    </script>
    <script type="text/javascript">
        $(document).ready(function(){
        	var index;
  	     	var pageIndex = 1;
  	     	var pageIndextwo = 1;
  	     	$('body').on('click','.dreambtn',function() {
  	     		JumpPage(1);
  	     	});
  	     	$('body').on('click','.spacebtn',function() {
  	     		JumpPage(0);
  	     	})
			index=util.getQueryString('data-id');
			JumpPage(index);
		    function JumpPage(index){
		    	if (index==1) {
					$('.dreambtn').children('.f-con').addClass('u-icon');
			    	$('.dreambtn').children('.menu-title').addClass('isActive');
			    	$('.dreambtn').siblings().children('.f-con').removeClass('u-icon');
			   	 	$('.dreambtn').siblings().children('.menu-title').removeClass('isActive');
			    	$('.form2').hide();
		    		$('.form1').show();
		    		getdreamMessage(22,pageIndex);
		    	}else{	
		    		$('.spacebtn').children('.f-con').addClass('u-icon');
			    	$('.spacebtn').children('.menu-title').addClass('isActive');
			    	$('.spacebtn').siblings().children('.f-con').removeClass('u-icon');
			   	 	$('.spacebtn').siblings().children('.menu-title').removeClass('isActive');
			    	$('.form1').hide();
		    		$('.form2').show();
		    		getdreamMessage(23,pageIndex);
		    	}
		    }
		 	$('body').on('click','.dream-list',function() {
				if ($(this).children('.u_icon').hasClass('open_icon')) {
					$(this).children('.dream-title').css('color','#c8a676');
					$(this).children('.u_icon').removeClass('open_icon').addClass('colse_icon');
					var $detail=$(this).children('.u-maincen');
					var id=$(this).attr("data-id");
					baseModel.get({
		                url: "helpDetails.cgi",
		                data:{id:id},
		                success: function(rslt){
		                    if(rslt.code==0) {
		                    	$detail.html(rslt.data.content);
		                    	$detail.stop().slideDown("slow");
		                        return;
		                    }else {
		                        var errMsg = rslt.message||"返回数据异常,请刷新重试!";
		                        alert(errMsg);
		                        return;
		                    }
		                }
		            });
				}else{
					$(this).children('.dream-title').css('color','#333');
					$(this).children('.u_icon').removeClass('colse_icon').addClass('open_icon');
					$(this).children('.u-maincen').stop().slideUp('slow');
				}
			});
			getdreamMessage(23,pageIndextwo);
			
        });
        //获取列表 22疯巢 23星空会
        function getdreamMessage(type,pageIndex){
            var data={
                "pageSize": 10,
                "pageIndex": pageIndex,
                "type":type
            };
            baseModel.get({
                url: "helpList.cgi",
                data:data,
                success: function(rslt){
                    if(rslt.code==0) {
                    	if (rslt.data.pageList.list.length>0) {
                    		var type=rslt.data.pageList.list[0].siteId;
	                    	var page=rslt.data.pageList.page;
	                    	var current=rslt.data.pageList.page.currentPage;
	                    	if (type==22) {
	                    		baseView.render("#tpl_list_dream",rslt.data.pageList,".dream-main");
	                    		if (page.pages) {
	                    			$('.from1-img').css("display","none");
									$(".pager").empty().pager({
										current:pageIndex,
										total:page.pages
									}).on("page", function (e, current) {
										getdreamMessage(22,current);
									});
								} else {
									$(".pager").hide();
								}
	                    	}
	                        if (type==23) {
	                        	if (page.pages) {
	                        		$('.from2-img').css("display","none");
									$(".pager2").empty().pager({
										current:pageIndex,
										total:page.pages
									}).on("page", function (e, current) {
										getdreamMessage(23,current);
									});
								} else {
									$(".pager2").hide();
								}
	                    		baseView.render("#tpl_list_dream",rslt.data.pageList,".space-main");
	                    	}
                    	}
                        return;
                    }else {
                        var errMsg = rslt.message||"返回数据异常,请刷新重试!";
                        alert(errMsg);
                        return;
                    }
                }
            });
        };
    </script>
