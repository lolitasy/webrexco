doctype html

mixin style(href)
    link(rel="stylesheet" href="/webrexco/static/css/" + href + ".css")

mixin script(src)
    script(src="/webrexco/static/js/" + src + ".js")

html(lang="zh-Hans-CN")

    head
        meta(charset="utf-8")
        block title
        title= title
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="format-detection" content="telephone=no")
        meta(name="theme-color" content="#232323")
        meta(name="apple-mobile-web-app-capable" content="yes")
        meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
        link(rel="icon" sizes="192x192" href="/webrexco/static/img/ideal/icon.png")
        link(rel="apple-touch-icon" sizes="120x120" href="/webrexco/static/img/ideal/icon-120.png")
        +style("cmn/common")
        +style("space/common")
        block style
        
    body
        | 
        | <% include ../cmn/header.ejs %>

        block header

        .content
            block content

        | 
        | <% include ../cmn/footer.ejs %>

        +script("cmn/rexco-0.1.min")
        +script("header")
        block script
