// sourceMap: true

@import "input";
@import "button";

body {
    background-color: #f9f9f9;
}

.header {
    width: 1200px;
    min-height: 100%;
    margin: 0 auto;
    padding-top: 80px;
    padding-bottom: 30px;
    background-color: #F9F9F9;
}

.title {
    font-size: 24px;
    font-weight: bolder;
    color: #666666;
}

.subtitle {
    margin-top: 8px;
    font-size: 16px;
    color: #666666;
}

.content {
    padding-top: 55px;
    padding-left: 100px;
    padding-bottom: 50px;
    background-color: #FFFFFF;
}

.userinfo {
    display: inline-block;
    vertical-align: top;
}

.avatar {
    width: 120px;
    height: 120px;
    background-color: #F9F9F9;
    border-radius: 100%;

    background-position: center;
    background-size: cover;
}

.username {
    width: 120px;
    margin-top: 20px;
    font-size: 18px;
    color: #666666;
    text-align: center;
}

form {
    display: inline-block;
    vertical-align: top;
    margin-left: 150px;
}

.input {
    position: relative;
    margin-bottom: 20px;
}

.select {
    @width: 410px;

    position: relative;
    display: inline-block;
    vertical-align: top;
    box-sizing: border-box;
    width: @width;
    height: 40px;
    padding: 0 20px;
    font-size: 16px;
    line-height: 40px;
    border: 1px solid #DDDDDD;
    cursor: default;

    @background: "dropdown.png";
    background-image: data-uri(@background);
    background-position: @width - image-width(@background) - 20px center;
    background-repeat: no-repeat;
    background-size: image-size(@background);
        
    &.custom {
        @width: 225px;

        width: @width;
        background-position: @width - image-width(@background) - 20px center;
    }
}

.select-name.placeholder {
    color: darkgrey;
}

.select-menu {
    position: absolute;
    top: 100%;
    right: -1px;
    left: -1px;
    max-height: 8 * 30px;
    background-color: #F9F9F9;
    border: 1px solid #DDDDDD;
    z-index: 10;
    overflow: auto;
}

.option {
    margin: 0 5px;
    padding: 0 15px;
    height: 30px;
    line-height: 30px;
    border-bottom: 1px solid #DDDDDD;

    &:last-of-type {
        border: none;
    }

    &:hover {
        color: #20D5C7;
    }
}

#input-position-value {
    display: none;

    .custom + & {
        display: inline-block;
        margin-left: 15px;
        width: 410 - 225 - 15px;
        vertical-align: top;
    }
}

.file-label {
    width: 330px;
    height: 40px;
    text-align: start;
    font-weight: normal;
}

.file-label-name {
    display: inline-block;
    vertical-align: top;
    box-sizing: border-box;
    height: 40px;
    line-height: 40px;
    width: 225px;
    padding: 0 20px;
    font-size: 16px;
    border: 1px solid #DDDDDD;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

    &.placeholder {
        color: darkgrey;
    }

    &.wide {
        width: 410px;
    }
}

.file-label-button {
    display: inline-block;
    vertical-align: top;
    height: 40px;
    line-height: 40px;
    padding: 0 20px;
    font-size: 16px;
    cursor: pointer;

    &:hover {
        color: #ff7b7b;
    }
}

input[type="file"] {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    width: .5px;
    height: .5px;
}

.tip {
    font-size: 14px;
    color: #AAAAAA;
    margin-top: 10px;
    margin-left: 120px;

    .wide & {
        width: 220px;
        margin-left: 150 + 25px;
    }
}

#submit {
    margin-top: 30px;
    margin-left: @label-width + 25px;
    padding: 0 27px;

    &.wide {
        margin-top: 30px;
        padding: 0 27px;
        width: 220px;
        margin-left: 150 + 25px;
    }
}

.level {
    display: inline-block;
    vertical-align: top;
    height: 40px;
    line-height: 40px;
    font-size: 18px;
    color: #666666;
}

.level-tip {
    @background: "question.png";

    position: relative;
    display: inline-block;
    vertical-align: top;
    width: image-width(@background) + 10px;
    height: 40px;

    background-image: data-uri(@background);
    background-repeat: no-repeat;
    background-size: image-size(@background);
    background-position: center center;
}

.level-popup {
    display: none;
    box-sizing: border-box;
    position: absolute;
    left: 100%;
    top: 0;

    @background: "popup.png";
    background-image: data-uri(@background);
    background-repeat: no-repeat;
    background-size: image-size(@background);
    width: image-width(@background);
    height: image-height(@background);
    
    padding: 12px 20px 0 30px;
    font-size: 14px;
    line-height: 20px;
    z-index: 10;

    .level-tip:hover & {
        display: block;
    }

    ul {
        margin: 5px 0 0 0;
        padding-left: 15px;
    }

    li {
        list-style: disc outside !important;
    }

    a {
        display: inline-block;
        margin-top: 8px;
        margin-left: 15px;  
        color: #c8a676;
        text-decoration: underline;
    }
}

#input-money-name {
    display: inline-block;
    vertical-align: top;
    height: 40px;
    line-height: 40px;
    font-size: 18px;
    font-weight: bold;
    color: #c8a676;
}

.box-radio {
    display: none;
    width: 0; // For Firefox
    height: 0; // For Firefox
    display: ~"inline\0/"; // For IE8

    & + label {
        box-sizing: border-box;
        display: inline-block;
        vertical-align: middle;
        width: 95px;
        height: 30px;
        line-height: 30px;
        text-align: center;
        margin-top: (40 - 30) / 2px;
        margin-right: 25px;
        font-size: 18px;
        background-color: #F4F4F4;
        border: 1px solid transparent;
        border-radius: 3px;

        &.checked {
            background-color: #FFFFFF;
            border-color: #c8a676;
            color: #c8a676;
        }
    }
}

.space {
    height: 55px;
    background-color: #F9F9F9;
}

hr {
    width: 505px;
    border-style: dashed;
    
    border-color: #CECECE;
    margin-right: 73px;
    margin-bottom: 20px;
}

textarea {
    box-sizing: border-box;
    resize: none;
    width: 410px;
    height: 120px;
    padding: 10px 20px;
    outline: none;
    border: 1px solid #DDDDDD;
    font-family: DengXian, sans-serif;
    font-size: 16px;

    &:focus {
        outline: none;
        border: 1px solid #c8a676;
    }
}

.skip {
    margin-top: 10px;
    padding: 0 27px;
    width: 220px;
    margin-left: 150px;
    font-size: 16px;
    color: #666666;
    text-align: right;
    text-decoration: underline;
    cursor: pointer;
}

.mask {
    position: fixed;
    display: none;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: data-uri("../cmn/a.5.png");

    .popup {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 440px;
        height: 330px;
        margin: -165px -220px;
        background-color: #FFFFFF;
        border-radius: 4px;

        .title {
            height: 60px;
            line-height: 60px;
            padding: 0 38px;
            color: #333333;
            font-size: 16px;
            font-weight: bold;
            border-bottom: 1px solid #D3D3D3;

            p {
                box-sizing: border-box;
                margin-top: 14px;
                height: 15 * 2 + 17px;
                line-height: 15 * 2 + 17px;
                display: inline-block;
                border-bottom: 3px solid #c8a676;
            }
        }
        
        .close {
            position: absolute;
            top: 12px;
            right: 38 - (48 - 16) / 2px;
            width: 48px;
            height: 48px;
            background-image: data-uri("close.png");
            background-position: center;
            background-repeat: no-repeat;
            background-size: image-size("close.png");
            cursor: pointer;
        }

        .popup-content {
            padding: 25px 40px;
            color: #333333;
            font-size: 18px;
            line-height: 35px;
        }

        .button {
            margin-top: 25px;
            height: 44px;
            line-height: 44px;
        }
    }
}
