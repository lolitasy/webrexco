<body>
    <% include ../cmn/header.ejs %>
    <div class="m-con">
        <div class="m-main">
            <div class="g-register">
            <form id="loginForm">
                <div class="f-pr">
                    <span class="u-phone"></span>
                    <input type="text" name="username" id="username" class="coninput" placeholder="用户名">
                    <div class="tips">
                        <span></span>
                    </div>
                </div>
                <div class="f-pr">
                    <span class="u-password"></span>
                    <input type="password" name="password" id="password" class="coninput" placeholder="登录密码">
                    <div class="tips">
                        <span></span>
                    </div>
                </div>
                <div class="f-pr">
                    <span class="u-valiCode"></span>
                    <input type="text" name="valiCode" id="valiCode" placeholder="请输入图形验证码" class="short coninput">
                    <a href="javascript:;" class="proving"><img id="validimg" class="codeimg" src="login.cci?w=160&amp;h=40&amp;f=34&amp;o=60&amp;q=60" alt="点击刷新" onclick="this.src='login.cci?w=160&amp;h=40&amp;f=34&amp;o=60&amp;q=60&amp;t=' + Math.random();" align="absmiddle"></a>
                    <div class="tips">
                        <span></span>
                    </div>
                </div>
                <div class="submit J_btnSubmit">登&nbsp;录</div>
                <div class="protocol">
                    <p>没有账号？<a id="register">立即注册</a></p>
                    <a  class="f-forget" href="/webrexco/forgetPwd.htm">忘记密码？</a>
                </div>
                <div class="u-share">
                    <div class="u-share-title">
                        <span class="leftSolid"></span>
                        <h1>第三方登录</h1>
                        <span class="rightSolid"></span>
                    </div>
                    <div class="threeLogin">
                         <a class="qq oauth-qq" href="#"></a>
                         <a class="weixin oauth-weixin" href="#"></a>
                         <a class="weibo oauth-weibo" href="#"></a>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </div>   
    <% include ../cmn/footer.ejs %>
    <script src="/webrexco/static/js/oauth.js"></script>
    <script type="text/javascript">
        var openid = util.getQueryString("openid");
        var type = util.getQueryString("type");
        var name = util.getQueryString("name");
        $("#login").attr("href", "register.htm?openid=" + encodeURIComponent(openid) + "&type=" + type + "&name=" + encodeURIComponent(name));

        $(function(){
            $(".f-pr input").mousedown(function(){
                $(this).css('border', '1px solid #1cd4c6');
                $(this).css('background-color', '#fff');
            });
            $(".f-pr input").blur(function(){
                $(this).css('border', '1px solid #d3d3d3');
                $(this).css('background-color', '#fff');
            });
            //验证手机格式
            $("#username").keyup(function(){
                var verif=this.value;
                if(verif.length==11){
                    checkUserName();
                }
            });
            $("#username").blur(function(){
                checkUserName();
            });
            //密码验证
            $("#password").blur(function(){
                if(!checkPassword()){
                    $(this).siblings(".tips").children("span").html("请输入8~16个字母和数字");
                        return;
                }
                $(this).siblings(".tips").children().html("");
            });
            //验证码
            $('#valiCode').keyup(function(){
                var verif=this.value;
                if(verif.length==4){
                    checkVerifyCode();
                }
            });
            $('#valiCode').blur(function(){
                checkVerifyCode();
            });
            $("#validimg").click(function(){
                $('#valiCode').val("");
            });
            $(".J_btnSubmit").click(function(){
                checkUserName();
                checkVerifyCode();
                if(!checkPassword()){
                    $('#password').siblings(".tips").children("span").html("请输入8~16个字母和数字");
                        return;
                }
                $('#password').siblings(".tips").children().html("");
                if(($("#username").siblings(".tips").children("span").html().length)>0&&($("#password").siblings(".tips").children("span").html().length)>0&&($("#valiCode").siblings(".tips").children("span").html().length)>0){
                    return;
                }
                loginSubmit();
            });
        });
        //检查手机是否被注册
        function checkUserName(){
            var value=$("#username").val();
            if(value == ""||undefined == value){
                $("#username").siblings(".tips").children("span").html("用户名不能为空");
                return;
            }
            $("#username").siblings(".tips").children("span").html("");
        };
        //检查密码格式
        function checkPassword(){
            var value = $("#password").val();
            var reg=/[a-zA-Z]+[0-9]+/img;
            var reg2=/[0-9]+[a-zA-Z]+/img;
            if (value.length < 8 || value.length > 16) {
                return false;
            }
            if(!reg.test(value)&&!reg2.test(value)){
                return false;
            }
            return true;
        }
        //注册图形验证码
        function checkVerifyCode(){
            var verifyCode =$('#valiCode').val();
            if(undefined == verifyCode||"" == verifyCode){
                $('#valiCode').siblings(".tips").children("span").html("验证码输入错误");
                return;
            }
            var data={
                "verifyCode":verifyCode
            };
            $.ajax({
                type: "get",
                url:"/webrexco/regist/checkVerifyCode.cgi",
                data:data,
                cache:false,
                success:function(rslt){
                    if(rslt.code!=0){//图形验证码错误,验证码刷新
                        $('#valiCode').siblings(".tips").children("span").html("验证码输入错误");
                        $('#validimg').attr('src',"login.cci?w=160&h=40&f=34&o=60&q=60&t=" + Math.random());//验证失败验证码刷新
                        $('#valiCode').val("");
                    }else{
                        $('#valiCode').siblings(".tips").children().html("");
                    }
                }
            });
        }
        //验证码倒计时
        function countDown(cd){
            var cd =cd || 60;
            timer =setInterval(function(){
                if(cd>0){
                    $('.valcode').text((--cd) +'s');
                }else{
                    window.clearInterval(timer);
                    $('.valcode').html('获取验证码');
                }
            },1000);
        }
        function loginSubmit(){
            $(".J_btnSubmit").text('登录中...');
            var data=$("#loginForm").serialize();
            $.ajax({
                type:"get",
                url:'/webrexco/login.cgi',
                data:data,
                cache:false,
                success:function(rslt){
                    if(rslt.code!=0){
                        var errMsg = rslt.message||"返回数据异常,请刷新重试!";
                        alert(errMsg);
                        $('#validimg').attr('src',"login.cci?w=160&h=40&f=34&o=60&q=60&t=" + Math.random());
                        return;
                    }
                                
                    var openid = util.getQueryString("openid");
                    var type = util.getQueryString("type");
                    var name = util.getQueryString("name");
                    $.ajax({
                        url: "/webrexco/oauth/data/bind.cgi", // 检测是否登录，如果已登录则绑定账号
                        method: "POST",
                        timeout: 10000,
                        data: {
                            openid: openid,
                            type: type,
                            name: name
                        },
                        success: function (data) {
                            if (data.code !== 0) {
                                alert(data.message);
                                return;
                            }

                            // 已登录，已绑定，返回
                            back();
                        },
                        error: function () {

                        }
                    });
                },
                complete:function(rslt){
                     $(".J_btnSubmit").text('登录'); 
                }
            })
        }

        function back() {
            opener.login();
            close();
        }
        
        // 授权登录完毕回调
        function login() {
            backUrl = util.getQueryString('backUrl')?util.getQueryString('backUrl'):"/webrexco/uc/index.htm";
            window.location.href=backUrl;
        }
    </script>
</body>
</html>
