var ghost = require(process.argv[2]+'/webrexco/cfg/ghost.js'); 
var gapi = require(process.argv[2]+'/webrexco/cmn/gapi.js');

exports.itfconf = function() {
	return new CurrentAPI().conf();
}

exports.itfleft = function(req,res,fld,fle) {
	return new CurrentAPI().output(req,res,fld,fle);
}

var CurrentAPI = gapi.BaseAPI.extend({
    conf: function() { return { auth: true,
        	type: "json",
        	itfs: [
	            {
	                host: ghost.dscm.makercenter.addr,
	                port: ghost.dscm.makercenter.port,
	                iurl: "/pcActivity?actn=searchActivityByTittle",
	                uuid: "pcActivity",
	                meth: "post",
	                type: "sdcm",
	                next: [],
	                func: function(req,res,fld,fle){
	                	return new CurrentAPI("pcActivity").
	                		callFunc(req,res,fld,fle);
	                }
	            }
        	]
    	};
    },

	doCallFunc: function(uuid, req, res, fld, fle) {
		var ip = gapi.getIPv4(req.user.addr),
			currentPage = gapi.getParameter(req, "currentPage"),
			pageSize = gapi.getParameter(req, "pageSize"),
			userId = req.session.user&&req.session.user.userId||null,
			keywords = gapi.getParameter(req,"keywords")|| null;
		ghost.getLogger().info("[doCallFunc]IP：%s, service: news.data.activitySearch, dc: pcActivity.searchActivityByTittle, message: 'param', param: currentPage=%s,pageSize=%s,userId=%s,keywords=%s",ip, currentPage, pageSize, userId, keywords);
		return {
	        "claz" : "['java.lang.Integer','java.lang.Integer','java.lang.String','java.lang.Long']",
	        "json" : [currentPage, pageSize,keywords,userId]
	    };
	},

	doOutput: function(req, res, fld, fle) {
		var ip = gapi.getIPv4(req.user.addr);
		if(!req.rslt['pcActivity']){
			ghost.getLogger().error("[doOutput]IP：%s, service: news.data.activitySearch, dc: pcActivity.searchActivityByTittle, message: 'rslt is null', rslt: %s", ip, JSON.stringify(req.rslt['pcActivity']));
			return gapi.toResult(500, "系统异常");
		}
		return gapi.toResult(null, null, req.rslt['pcActivity']);
	}
});
